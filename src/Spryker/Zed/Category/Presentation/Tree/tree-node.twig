<div class="dd-handle">
    {{ node.text }}

    <div class="pull-right">
        {% if node.is_active %}
            <span class="label label-info" title="{{ 'Category status' | trans }}">Active</span>
        {% else %}
            <span class="label label-danger" title="{{ 'Inactive' | trans }}">
                Inactive
            </span>
        {% endif %}

        {% if node.is_in_menu %}
            <span class="label" title="{{ 'Visible in the category tree' | trans }}">Visible</span>
        {% endif %}

        {% if node.is_searchable %}
            <span class="label" title="{{ 'Searchable' | trans }}">Searchable</span>
        {% endif %}

        <span class="label" title="{{ 'Category template' | trans }}">{{ node.category_template_name }}</span>

        {% if node.children is defined and node.children|length > 0 %}
            <a
                href="/category/re-sort?id-node={{ node.id }}"
                id="node-{{ node.id }}"
                class="btn btn-xs btn-outline btn-view"
                title="Re-sort Child Categories"
            >
                <i class="fa fa-fw fa-arrows-v"></i>
            </a>
        {% endif %}

        <a
            href="/product-category/assign?id-category={{ node.id_category }}"
            class="btn btn-xs btn-outline btn-view"
            title="Assign Products to this Category"
        >
            <i class="fa fa-fw fa-chain"></i>
        </a>
        <a
            href="/category/create?id-parent-node={{ node.id }}"
            class="btn btn-xs btn-outline btn-create"
            title="Add Category to this Node"
        >
            <i class="fa fa-fw fa-plus"></i>
        </a>
        <a
            href="/category/edit?id-category={{ node.id_category }}"
            class="btn btn-xs btn-outline btn-edit"
            title="Edit Category"
        >
            <i class="fa fa-fw fa-pencil"></i>
        </a>
        <a
                href="/category/view?id-category={{ node.id_category }}"
                class="btn btn-xs btn-outline btn-view"
                title="View Category"
        >
            <i class="fa fa-fw fa-eye"></i>
        </a>
        <a
            href="/category/delete?id-category={{ node.id_category }}"
            class="btn btn-xs btn-outline btn-danger"
            title="Delete Category"
        >
            <i class="fa fa-fw fa-trash"></i>
        </a>
    </div>
</div>
