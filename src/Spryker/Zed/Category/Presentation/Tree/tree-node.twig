<div class="dd-handle">
    {{ node.text }}

    <div class="pull-right">
        {% if node.is_active %}
            <span class="label" title="{{ 'Active' | trans }}">A</span>
        {% else %}
            <span class="label" title="{{ 'Inactive' | trans }}" style="background-color: slategray !important">
                A
            </span>
        {% endif %}

        {% if node.is_in_menu %}
            <span class="label" title="{{ 'In Menu' | trans }}">M</span>
        {% else %}
            <span class="label" title="{{ 'Not in Menu' | trans }}" style="background-color: slategray !important">
                M
            </span>
        {% endif %}

        {% if node.children is defined and node.children|length > 0 %}
            <a href="/category/re-sort?id-node={{ node.id }}" id="node-{{ node.id }}" class="btn btn-xs btn-success">
                <i class="fa fa-sitemap"></i>
            </a>
        {% endif %}

        <a href="/category/create?id-parent-node={{ node.id }}" class="btn btn-xs btn-success">
            <i class="fa fa-plus"></i>
        </a>
        <a href="/category/edit?id-category={{ node.id_category }}" class="btn btn-xs btn-primary">
            <i class="fa fa-pencil"></i>
        </a>
        <a href="/category/delete?id-category={{ node.id_category }}" class="btn btn-xs btn-warning">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
