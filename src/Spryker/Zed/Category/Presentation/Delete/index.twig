{% extends '@Gui/Layout/layout.twig' %}

{% if submit_title is not defined %}
    {% set widget_title = 'Delete Category' | trans %}
    {% set widget_title = widget_title ~ ': ' ~ category.name %}
{% endif %}

{% if idCategory is not defined %}
    {% set idCategory = 0 %}
{% endif %}

{% block head_title -%}
    {{ widget_title | trans }} {% if idCategory > 0 %} [{{ idCategory }}] {% endif %}
{%- endblock %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/category', 'List Categories' | trans) }}
    {{ createActionButton('/category/add', 'Create Category' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}

            {{ form_errors(form) }}

            {{ form_rest(form) }}

            <input
                type="submit"
                class="btn btn-primary"
                value="{{ 'Delete' | trans }}"
                disabled="disabled"
                id="submit_delete"
            />
            <label for="delete_confirm">
                <input type="checkbox" id="delete_confirm"/>
                {{ 'Yes, I am sure' | trans }}
            </label>
            <br/><br/>

            <div class="row">
                {% macro tree(nodes) %}
                    <ol class="dd-list">
                        {% for node in nodes %}
                            <li class="dd-item">
                                <span class="dd-handle">
                                    {{ node.text }}
                                </span>

                                {% if node.children is defined and node.children|length > 0 %}
                                    {{ _self.tree(node.children) }}
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ol>
                {% endmacro %}

                {% import _self as tree %}

                <div class="col-md-4">
                    <b>Sub-Trees to me moved</b>
                    <br />
                    {% for subTree in subTrees %}
                        <br />
                        <p>
                            {% if subTree.isMain %} Main {% else %} Extra parent {% endif %}
                            category will be moved to <em>{{ subTree.parentCategory.name }}</em>
                        </p>
                        <ol class="dd-list">
                            <li class="dd-item">
                                <span class="dd-handle">{{ subTree.text }}</span>
                                {{ tree.tree(subTree.tree) }}
                            </li>
                        </ol>
                    {% endfor %}
                </div>
{#
                <div class="col-md-4"><b>Urls to be deleted</b>
                    {% if paths|length > 0 %}
                        <ul class="nodes">
                            {% for path in paths %}
                                <li data-node="{{ path.view_node_name }}">
                                    {{ path.url }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <ul>
                            <li>None</li>
                        </ul>
                    {% endif %}
                </div>

                <div class="col-md-4"><b>Products to be de / re assigned</b>
                    {% if products|length > 0 %}
                        <ul class="nodes">
                            {% for product in products %}
                                <li data-node="child">
                                    {{ product.name }} ({{ product.sku }})
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <ul>
                            <li>None</li>
                        </ul>
                    {% endif %}
                </div>

                <div class="col-md-4"><b>CMS blocks to be de assigned</b>
                    {% if blocks|length > 0 %}
                        <ul class="nodes">
                            {% for block in blocks %}
                                <li data-node="child">
                                    {{ block.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <ul>
                            <li>None</li>
                        </ul>
                    {% endif %}
                </div>
#}
            </div>

            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-productcategory-main.css" />
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-productcategory-main.js"></script>
    <script src="/assets/js/spryker-zed-productcategory-delete.js"></script>
{% endblock %}
