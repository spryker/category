{% extends '@Gui/Layout/layout.twig' %}

{% set page_title = 'Category' %}
{% block section_title %}{{ page_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/category', 'List Categories' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Order Categories children' } %}

        {% block widget_content %}

            <div class="progress hidden" id="category-loader">
                <div class="progress-bar progress-bar-100 progress-bar-striped active" role="progressbar"></div>
            </div>

            <div class="dd" id="nestable">
                <ol class="dd-list">
                    {% for item in items %}
                        <li class="dd-item" data-id="{{ item.id }}" id="node-{{ item.id }}">
                            <div class="dd-handle">{{ item.text }}</div>
                        </li>
                    {% endfor %}
                </ol>
            </div>
            <br/>
            <br/>
            <button class="btn btn-sm btn-primary save-categories-order">{{ 'Save Order' | trans }}</button>
        {% endblock %}
    {% endembed %}

{% endblock %}
