{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Category Edit' %}
{% block head_title -%}
    {{ widget_title | trans }} : {{ idCategory }}
{%- endblock %}
{% block section_title %}{{ widget_title }}{% endblock %}


{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}
    
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/bundles/Gui/styles/select2.min.css">
{% endblock %}

